<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.wrist_trainer.bivsa.wristtrainer.Components.ResultFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/beginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="TextView"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/resultRotateCount"
                android:layout_below="@+id/beginTime"
                android:layout_marginTop="30dp"
                android:text="TextView"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/resultRotateCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/duration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="TextView"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/commentContainer"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/resultRotateCount"
                android:layout_centerHorizontal="true"
                android:gravity="start"
                android:layout_marginTop="30dp"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:ems="10"
                android:inputType="textMultiLine"
                android:maxLength="255" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Continue" />

</RelativeLayout>
