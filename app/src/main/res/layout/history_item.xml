<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">

    <TextView
        android:id="@+id/history_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="historyName"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/history_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_begin"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:text="historyDuration"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/history_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_name"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:text="hitsotyBegin"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/history_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_duration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:maxWidth="500dp" />
</RelativeLayout>
